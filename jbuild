(jbuild_version 1)

(executable
 ((name main)
  (public_name mav)
  (flags (:standard -safe-string -w A-44-33-4 -open Containers))
  (libraries (containers ezjsonm ptime tyxml cmdliner))))

(rule
  (with-stdout-to config.ml
    (progn
      (echo "let name = {|mav|}\n")
      (echo "let version = {|${version:mav}|}\n"))))
